<Window
    x:Class="EasyPlay.Helpers.CustomMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="پیام"
    Width="420"
    Height="Auto"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">

    <Border
        Margin="20"
        Background="#1a1a1a"
        BorderBrush="#2a2a2a"
        BorderThickness="1"
        CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="30"
                Direction="270"
                Opacity="0.5"
                ShadowDepth="10"
                Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Icon & Title  -->
            <StackPanel
                Grid.Row="0"
                Margin="30,30,30,20"
                HorizontalAlignment="Center">

                <!--  Icon Circle  -->
                <Border
                    x:Name="IconBorder"
                    Width="70"
                    Height="70"
                    HorizontalAlignment="Center"
                    Background="#2d1f1f"
                    CornerRadius="35">
                    <TextBlock
                        x:Name="MessageIcon"
                        FontSize="40"
                        Foreground="#ff1313"
                        Style="{StaticResource FontAwesomeStyleIconTextBlock}"
                        Text="&#xf059;" />
                </Border>

                <!--  Title  -->
                <TextBlock
                    x:Name="TitleText"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    FlowDirection="RightToLeft"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="عنوان پیام" />
            </StackPanel>

            <!--  Message  -->
            <TextBlock
                x:Name="MessageText"
                Grid.Row="1"
                Margin="30,0,30,25"
                HorizontalAlignment="Center"
                FlowDirection="RightToLeft"
                FontSize="14"
                Foreground="#b0b0b0"
                LineHeight="24"
                Text="متن پیام"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="30,0,30,30"
                HorizontalAlignment="Center"
                FlowDirection="RightToLeft"
                Orientation="Horizontal">

                <!--  Primary Button  -->
                <Button
                    x:Name="PrimaryButton"
                    MinWidth="110"
                    Padding="25,12"
                    Click="PrimaryButton_Click"
                    Cursor="Hand"
                    FlowDirection="RightToLeft">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#ff1313" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#e238b3" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock
                        x:Name="PrimaryButtonText"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="تایید" />
                </Button>

                <!--  Secondary Button  -->
                <Button
                    x:Name="SecondaryButton"
                    MinWidth="110"
                    Margin="10,0,0,0"
                    Padding="25,12"
                    Click="SecondaryButton_Click"
                    Cursor="Hand"
                    FlowDirection="RightToLeft"
                    Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2a2a2a" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3a3a3a" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock
                        x:Name="SecondaryButtonText"
                        FontSize="14"
                        Foreground="#b0b0b0"
                        Text="انصراف" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>