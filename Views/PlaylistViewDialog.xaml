<Window
    x:Class="EasyPlay.Views.PlaylistViewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="‌PlayList"
    Width="900"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    FlowDirection="RightToLeft"
    Icon="/Assets/Images/app-icon.ico"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#606060" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="PrimaryButtonStyle"
            BasedOn="{StaticResource DialogButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#ff1313" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d93a3a" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#a01212" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="Bd"
                            Margin="0,0,0,8"
                            Padding="15"
                            Background="#252525"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            CornerRadius="8"
                            SnapsToDevicePixels="true">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#303030" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353535" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#ff1313" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ScrollBar Style H  -->
        <Style x:Key="HScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="8" />
            <Setter Property="MinHeight" Value="8" />
            <Setter Property="MaxHeight" Value="8" />
            <Setter Property="Background" Value="gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Track
                                    Name="PART_Track"
                                    Focusable="false"
                                    IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border
                                                        x:Name="ThumbBorder"
                                                        Background="#c71717"
                                                        CornerRadius="5"
                                                        SnapsToDevicePixels="True" />
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="#e23838" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border
        Background="#1f1f1f"
        BorderBrush="#ff1313"
        BorderThickness="1,0,1,1"
        CornerRadius="10">
        <DockPanel>
            <!--  Header  -->
            <Border
                Height="35"
                Background="#0f0f0f"
                BorderBrush="#ff1313"
                BorderThickness="1"
                CornerRadius="10,10,0,0"
                DockPanel.Dock="Top"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  App Icon & Title  -->
                    <StackPanel
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <!--  App Icon  -->
                        <Image
                            Width="20"
                            Height="20"
                            Margin="0,0,8,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Assets/Images/app-icon.ico" />

                        <!--  Title  -->
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="#ff1313"
                            Text="EasyPlay" />
                    </StackPanel>

                    <!--  Window Control Buttons  -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!--  Close Button  -->
                        <Button
                            Width="45"
                            Height="35"
                            Click="CloseButton_Click"
                            Style="{StaticResource TitleBarCloseButtonStyle}"
                            ToolTip="بستن">
                            <TextBlock
                                FontFamily="{StaticResource AppFontAwesomeRegular}"
                                FontSize="14"
                                Foreground="#b0b0b0"
                                Text="&#xf00d;" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Border
                Margin="20"
                Padding="20"
                Background="#252525"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Header  -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock
                            x:Name="PlaylistNameText"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#ffffff"
                            Text="پلی لیست" />
                    </StackPanel>

                    <!--  Videos List  -->
                    <ListBox x:Name="VideosListBox" Grid.Row="1">
                        <ListBox.Resources>
                            <Style BasedOn="{StaticResource HScrollBarStyle}" TargetType="ScrollBar" />
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.Column="0"
                                        Margin="40,0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <Button
                                            Width="80"
                                            Margin="0,5"
                                            Click="PlayVideoButton_Click"
                                            Content="پخش"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Tag="{Binding}" />
                                        <Button
                                            Width="80"
                                            Margin="0,5"
                                            Click="RemoveVideoButton_Click"
                                            Content="حذف"
                                            Style="{StaticResource DialogButtonStyle}"
                                            Tag="{Binding}" />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            Margin="0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#ffffff">
                                            <Run Text="اسم: " />
                                            <Run Text="{Binding Title}" />
                                        </TextBlock>

                                        <Button
                                            Margin="0,5,0,5"
                                            Padding="5"
                                            Background="Transparent"
                                            FontSize="11"
                                            Foreground="#888888"
                                            ToolTip="{Binding VideoUrl}">
                                            <TextBlock
                                                Margin="0"
                                                VerticalAlignment="Center"
                                                FontSize="11"
                                                Foreground="#888888"
                                                Text="برای مشاهده لینک، نگه دار"
                                                TextTrimming="CharacterEllipsis" />
                                        </Button>
                                    </StackPanel>


                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!--  Footer  -->
                    <Button
                        Grid.Row="2"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Left"
                        Click="CloseButton_Click"
                        Content="بستن"
                        Style="{StaticResource DialogButtonStyle}" />
                </Grid>
            </Border>
        </DockPanel>
    </Border>
</Window>
