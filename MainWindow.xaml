<Window
    x:Class="EasyPlay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EasyPlay - پخش کننده آنلاین"
    Width="900"
    Height="900"
    MinWidth="800"
    MinHeight="600"
    Background="#1a1a1a"
    FlowDirection="RightToLeft"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Button Styles  -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#606060" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2a2a2a" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="PrimaryButtonStyle"
            BasedOn="{StaticResource ModernButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#ff1313" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d93a3a" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#a01212" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#5a3a3a" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBox Style  -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CaretBrush" Value="#ffffff" />
            <Setter Property="SelectionBrush" Value="#ff1313" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#ff1313" />
                                <Setter TargetName="border" Property="Background" Value="#303030" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1a1a1a" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  CheckBox Style  -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  TabControl Style  -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="Border"
                            Margin="2,0"
                            Padding="20,12"
                            Background="#2a2a2a"
                            BorderThickness="0"
                            CornerRadius="8,8,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252525" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#353535" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#cccccc" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <!--  ListBox Style  -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="Bd"
                            Margin="0,0,0,8"
                            Padding="15"
                            Background="#252525"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            CornerRadius="8"
                            SnapsToDevicePixels="true">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#303030" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353535" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#ff1313" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxFieldInSign" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#ff1313" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="20,0" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ff1313" />
                    <Setter Property="Foreground" Value="white" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  ScrollBar Style V  -->
        <Style x:Key="VScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="8" />
            <Setter Property="MinWidth" Value="8" />
            <Setter Property="MaxWidth" Value="8" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="Background" Value="gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Track
                                    Name="PART_Track"
                                    Focusable="false"
                                    IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border
                                                        x:Name="ThumbBorder"
                                                        Background="#ff1313"
                                                        CornerRadius="5"
                                                        SnapsToDevicePixels="True" />
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="#e238b3" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20,15"
            Background="#252525"
            BorderBrush="#303030"
            BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#ff1313"
                        Text="📺 " />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#ffffff"
                        Text="EasyPlay" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <!--  Tab 1: Play  -->
            <TabItem Header="🎬 پخش">
                <Border
                    Margin="20"
                    Padding="30"
                    Background="#252525"
                    CornerRadius="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Resources>
                            <Style BasedOn="{StaticResource VScrollBarStyle}" TargetType="ScrollBar" />
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,20"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#ffffff"
                                Text="پخش ویدیوی آنلاین" />

                            <!--  Video URL  -->
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="13"
                                Foreground="#cccccc"
                                Text="لینک ویدیو:" />
                            <TextBox
                                x:Name="VideoUrlTextBox"
                                Height="40"
                                Style="{StaticResource TextBoxFieldInSign}" />

                            <!--  Video Title  -->
                            <TextBlock
                                Margin="0,20,0,8"
                                FontSize="13"
                                Foreground="#cccccc"
                                Text="عنوان ویدیو:" />
                            <TextBox
                                x:Name="VideoTitleTextBox"
                                Height="40"
                                Style="{StaticResource TextBoxFieldInSign}" />

                            <!--  Subtitle URL  -->
                            <TextBlock
                                Margin="0,20,0,8"
                                FontSize="13"
                                Foreground="#cccccc"
                                Text="لینک زیرنویس (اختیاری):" />
                            <TextBox
                                x:Name="SubtitleUrlTextBox"
                                Height="40"
                                Style="{StaticResource TextBoxFieldInSign}"
                                Text="" />

                            <!--  Download Options  -->
                            <Border
                                Margin="0,25,0,0"
                                Padding="15"
                                Background="#2a2a2a"
                                CornerRadius="8">
                                <StackPanel>
                                    <CheckBox
                                        x:Name="DownloadVideoCheckBox"
                                        Margin="0,0,0,10"
                                        Checked="DownloadVideoCheckBox_Changed"
                                        Content="دانلود همزمان ویدیو"
                                        Style="{StaticResource ModernCheckBoxStyle}"
                                        Unchecked="DownloadVideoCheckBox_Changed" />

                                    <StackPanel
                                        x:Name="DownloadOptionsPanel"
                                        IsEnabled="False"
                                        Opacity="0.5">
                                        <TextBlock
                                            Margin="0,10,0,8"
                                            FontSize="12"
                                            Foreground="#aaaaaa"
                                            Text="مسیر ذخیره:" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                x:Name="SavePathTextBox"
                                                Grid.Column="0"
                                                Height="36"
                                                IsReadOnly="True"
                                                Style="{StaticResource TextBoxFieldInSign}" />
                                            <Button
                                                Grid.Column="1"
                                                Width="100"
                                                Margin="10,0,0,0"
                                                Click="BrowseSavePath_Click"
                                                Content="انتخاب..."
                                                Style="{StaticResource ModernButtonStyle}" />
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Play Button  -->
                            <Button
                                Margin="0,30,0,0"
                                Padding="20,12"
                                Click="PlayButton_Click"
                                Content="▶ شروع پخش"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Style="{StaticResource PrimaryButtonStyle}" />

                            <!--  Add to Playlist Button  -->
                            <Button
                                Margin="0,10,0,0"
                                Click="AddToPlaylistButton_Click"
                                Content="➕ افزودن به پلی‌لیست"
                                Style="{StaticResource ModernButtonStyle}" />
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <!--  Tab 2: Playlist  -->
            <TabItem Header="📋 پلی‌لیست">
                <Border
                    Margin="20"
                    Padding="20"
                    Background="#252525"
                    CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Playlist Header  -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#ffffff"
                                Text="پلی‌لیست‌های من" />
                            <Button
                                HorizontalAlignment="Left"
                                Click="CreatePlaylistButton_Click"
                                Content="+ پلی‌لیست جدید"
                                Style="{StaticResource PrimaryButtonStyle}" />
                        </Grid>

                        <!--  Playlists List  -->
                        <ListBox
                            x:Name="PlaylistsListBox"
                            Grid.Row="1"
                            SelectionChanged="PlaylistsListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#ffffff"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Foreground="#888888">
                                                <Run Text="{Binding VideoCount}" />
                                                <Run Text="ویدیو •" />
                                                <Run Text="{Binding DisplayDate}" />
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button
                                                Width="80"
                                                Margin="5,0"
                                                Click="ViewPlaylistButton_Click"
                                                Content="مشاهده"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Tag="{Binding}" />
                                            <Button
                                                Width="80"
                                                Margin="5,0"
                                                Click="DeletePlaylistButton_Click"
                                                Content="حذف"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Tag="{Binding}" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </TabItem>

            <!--  Tab 3: History  -->
            <TabItem Header="🕐 تاریخچه">
                <Border
                    Margin="20"
                    Padding="20"
                    Background="#252525"
                    CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  History Header  -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#ffffff"
                                Text="تاریخچه پخش" />
                            <Button
                                HorizontalAlignment="Left"
                                Click="ClearHistoryButton_Click"
                                Content="پاک کردن تاریخچه"
                                Style="{StaticResource ModernButtonStyle}" />
                        </Grid>

                        <!--  History List  -->
                        <ListBox x:Name="HistoryListBox" Grid.Row="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#ffffff"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Margin="0,5,0,0"
                                                FontSize="11"
                                                Foreground="#888888"
                                                Text="{Binding DisplayLastPlayed}"
                                                TextTrimming="CharacterEllipsis" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button
                                                Width="80"
                                                Margin="5,0"
                                                Click="PlayFromHistoryButton_Click"
                                                Content="پخش"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="{Binding}" />
                                            <Button
                                                Width="80"
                                                Margin="5,0"
                                                Click="RemoveFromHistoryButton_Click"
                                                Content="حذف"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Tag="{Binding}" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!--  Download Panel (Bottom)  -->
        <Border
            x:Name="DownloadPanel"
            Grid.Row="2"
            Padding="20,15"
            Background="#252525"
            BorderBrush="#303030"
            BorderThickness="0,1,0,0"
            Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="#ffffff"
                            Text="در حال دانلود: " />
                        <TextBlock
                            x:Name="DownloadFileNameText"
                            Grid.Column="1"
                            Margin="5,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#cccccc"
                            Text="video.mp4"
                            TextTrimming="CharacterEllipsis" />
                        <TextBlock
                            x:Name="DownloadProgressText"
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#ff1313"
                            Text="0%" />
                    </Grid>

                    <ProgressBar
                        x:Name="DownloadProgressBar"
                        Height="6"
                        Margin="0,8,0,0"
                        Background="#2a2a2a"
                        BorderThickness="0"
                        Foreground="#ff1313"
                        Maximum="100"
                        Value="0" />

                    <Grid Margin="0,5,0,0">
                        <TextBlock
                            x:Name="DownloadSpeedText"
                            HorizontalAlignment="Right"
                            FontSize="11"
                            Foreground="#888888"
                            Text="0 KB/s" />
                        <TextBlock
                            x:Name="DownloadSizeText"
                            HorizontalAlignment="Left"
                            FontSize="11"
                            Foreground="#888888"
                            Text="0 MB / 0 MB" />
                    </Grid>
                </StackPanel>

                <Button
                    Grid.Column="1"
                    Width="100"
                    Margin="20,0,0,0"
                    Click="CancelDownloadButton_Click"
                    Content="لغو"
                    Style="{StaticResource ModernButtonStyle}" />
            </Grid>
        </Border>
    </Grid>
</Window>
