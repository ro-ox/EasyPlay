<Window
    x:Class="EasyPlay.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EasyPlay - Online Player"
    Width="900"
    Height="900"
    MinWidth="800"
    MinHeight="600"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Assets/Images/app-icon.ico"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Button Styles  -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#606060" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2a2a2a" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="PrimaryButtonStyle"
            BasedOn="{StaticResource ModernButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#ff1313" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d93a3a" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#a01212" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#5a3a3a" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  TextBox Style  -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="CaretBrush" Value="#ffffff" />
            <Setter Property="SelectionBrush" Value="#ff1313" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#ff1313" />
                                <Setter TargetName="border" Property="Background" Value="#303030" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#505050" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1a1a1a" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  CheckBox Style  -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  TabControl Style  -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="Border"
                            Margin="2,0"
                            Padding="20,12"
                            Background="#2a2a2a"
                            BorderThickness="0"
                            CornerRadius="8,8,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#252525" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#353535" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#cccccc" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <!--  ListBox Style  -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="Bd"
                            Margin="0,0,0,8"
                            Padding="15"
                            Background="#252525"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            CornerRadius="8"
                            SnapsToDevicePixels="true">
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#303030" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353535" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#ff1313" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxFieldInSign" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderBrush" Value="#ff1313" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="20,0" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FlowDirection" Value="LeftToRight" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ff1313" />
                    <Setter Property="Foreground" Value="white" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  ScrollBar Style V  -->
        <Style x:Key="VScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="8" />
            <Setter Property="MinWidth" Value="8" />
            <Setter Property="MaxWidth" Value="8" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="Background" Value="gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <Grid>
                                <Track
                                    Name="PART_Track"
                                    Focusable="false"
                                    IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb>
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border
                                                        x:Name="ThumbBorder"
                                                        Background="#ff1313"
                                                        CornerRadius="5"
                                                        SnapsToDevicePixels="True" />
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ThumbBorder" Property="Background" Value="#e23838" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!--  Header  -->
        <Border
            Height="35"
            Background="#0f0f0f"
            BorderBrush="#ff1313"
            BorderThickness="1"
            CornerRadius="10,10,0,0"
            DockPanel.Dock="Top"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  App Icon & Title  -->
                <StackPanel
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  App Icon  -->
                    <Image
                        Width="20"
                        Height="20"
                        Margin="0,0,8,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Assets/Images/app-icon.ico" />

                    <!--  Title  -->
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#ff1313"
                        Text="EasyPlay" />
                </StackPanel>

                <!--  Window Control Buttons  -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <!--  Minimize Button  -->
                    <Button
                        Width="45"
                        Height="35"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="کمینه کردن">
                        <TextBlock
                            FontFamily="{StaticResource AppFontAwesomeRegular}"
                            FontSize="14"
                            Foreground="#b0b0b0"
                            Text="&#xf068;" />
                    </Button>

                    <!--  Restore Default Size Button  -->
                    <Button
                        x:Name="RestoreDefaultButton"
                        Width="45"
                        Height="35"
                        Click="RestoreDefaultButton_Click"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="بازگشت به اندازه پیش‌فرض">
                        <TextBlock
                            FontFamily="{StaticResource AppFontAwesomeRegular}"
                            FontSize="14"
                            Foreground="#b0b0b0"
                            Text="&#xf065;" />
                    </Button>

                    <!--  Maximize/Restore Button  -->
                    <Button
                        x:Name="MaximizeButton"
                        Width="45"
                        Height="35"
                        Click="MaximizeButton_Click"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="بزرگ کردن / بازگشت">
                        <TextBlock
                            x:Name="MaximizeIcon"
                            FontFamily="{StaticResource AppFontAwesomeRegular}"
                            FontSize="14"
                            Foreground="#b0b0b0"
                            Text="&#xf2d0;" />
                    </Button>

                    <!--  Close Button  -->
                    <Button
                        Width="45"
                        Height="35"
                        Click="CloseButton_Click"
                        Style="{StaticResource TitleBarCloseButtonStyle}"
                        ToolTip="بستن">
                        <TextBlock
                            FontFamily="{StaticResource AppFontAwesomeRegular}"
                            FontSize="14"
                            Foreground="#b0b0b0"
                            Text="&#xf00d;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Background="#1a1a1a"
            BorderBrush="#ff1313"
            BorderThickness="1,0,1,1"
            CornerRadius="0,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border
                    Grid.Row="0"
                    Padding="20,15"
                    Background="#252525"
                    BorderBrush="#303030"
                    BorderThickness="0,0,0,1"
                    FlowDirection="RightToLeft">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="50" Margin="0,0,10,0">
                                <Image.Source>
                                    <BitmapImage DecodePixelWidth="250" UriSource="\Assets\Images\app-icon.ico" />
                                </Image.Source>
                            </Image>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#ffffff"
                                Text="EasyPlay" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Main Content  -->
                <TabControl
                    Grid.Row="1"
                    MinHeight="500"
                    Margin="20,10"
                    FlowDirection="RightToLeft">
                    <!--  Tab 1: Play  -->
                    <TabItem Header="🎬 پخش">
                        <Border
                            Margin="20"
                            Padding="30"
                            Background="#252525"
                            CornerRadius="12">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <Style BasedOn="{StaticResource VScrollBarStyle}" TargetType="ScrollBar" />
                                </ScrollViewer.Resources>
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,20"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="#ffffff"
                                        Text="پخش ویدیوی آنلاین" />

                                    <!--  Video URL  -->
                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontSize="13"
                                        Foreground="#cccccc"
                                        Text="لینک ویدیو:" />
                                    <TextBox
                                        x:Name="VideoUrlTextBox"
                                        Height="40"
                                        Style="{StaticResource TextBoxFieldInSign}" />

                                    <!--  Video Title  -->
                                    <TextBlock
                                        Margin="0,20,0,8"
                                        FontSize="13"
                                        Foreground="#cccccc"
                                        Text="عنوان ویدیو:" />
                                    <TextBox
                                        x:Name="VideoTitleTextBox"
                                        Height="40"
                                        Style="{StaticResource TextBoxFieldInSign}" />

                                    <!--  Subtitle URL  -->
                                    <TextBlock
                                        Margin="0,20,0,8"
                                        FontSize="13"
                                        Foreground="#cccccc"
                                        Text="لینک زیرنویس (اختیاری):" />
                                    <TextBox
                                        x:Name="SubtitleUrlTextBox"
                                        Height="40"
                                        Style="{StaticResource TextBoxFieldInSign}"
                                        Text="" />

                                    <!--  Download Options  -->
                                    <Border
                                        Margin="0,25,0,0"
                                        Padding="15"
                                        Background="#2a2a2a"
                                        CornerRadius="8"
                                        IsEnabled="False">
                                        <StackPanel>
                                            <CheckBox
                                                x:Name="DownloadVideoCheckBox"
                                                Margin="0,0,0,10"
                                                Checked="DownloadVideoCheckBox_Changed"
                                                Content="دانلود همزمان ویدیو - هنوز پیاده سازی نشده :("
                                                Style="{StaticResource ModernCheckBoxStyle}"
                                                Unchecked="DownloadVideoCheckBox_Changed" />

                                            <StackPanel
                                                x:Name="DownloadOptionsPanel"
                                                IsEnabled="False"
                                                Opacity="0.5">
                                                <TextBlock
                                                    Margin="0,10,0,8"
                                                    FontSize="12"
                                                    Foreground="#aaaaaa"
                                                    Text="مسیر ذخیره:" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox
                                                        x:Name="SavePathTextBox"
                                                        Grid.Column="0"
                                                        Height="36"
                                                        IsReadOnly="True"
                                                        Style="{StaticResource TextBoxFieldInSign}" />
                                                    <Button
                                                        Grid.Column="1"
                                                        Width="100"
                                                        Margin="10,0,0,0"
                                                        Click="BrowseSavePath_Click"
                                                        Content="انتخاب..."
                                                        Style="{StaticResource ModernButtonStyle}" />
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!--  Play Button  -->
                                    <Button
                                        Margin="0,30,0,0"
                                        Padding="20,12"
                                        Click="PlayButton_Click"
                                        Content="▶ شروع پخش"
                                        FontSize="15"
                                        FontWeight="SemiBold"
                                        Style="{StaticResource PrimaryButtonStyle}" />

                                    <!--  Add to Playlist Button  -->
                                    <Button
                                        Margin="0,10,0,0"
                                        Click="AddToPlaylistButton_Click"
                                        Content="➕ افزودن به پلی لیست"
                                        Style="{StaticResource ModernButtonStyle}" />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!--  Tab 2: Playlist  -->
                    <TabItem Header="📋 پلی لیست‌">
                        <Border
                            Margin="20"
                            Padding="20"
                            Background="#252525"
                            CornerRadius="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Playlist Header  -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="#ffffff"
                                        Text="پلی لیست‌های من" />
                                    <Button
                                        HorizontalAlignment="Left"
                                        Click="CreatePlaylistButton_Click"
                                        Content="+ پلی لیست جدید"
                                        Style="{StaticResource PrimaryButtonStyle}" />
                                </Grid>

                                <!--  Playlists List  -->
                                <Border
                                    Grid.Row="1"
                                    Background="#3f3f3f"
                                    CornerRadius="10">
                                    <ListBox
                                        x:Name="PlaylistsListBox"
                                        Background="Transparent"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        SelectionChanged="PlaylistsListBox_SelectionChanged">
                                        <ListBox.Resources>
                                            <Style BasedOn="{StaticResource VScrollBarStyle}" TargetType="ScrollBar" />
                                        </ListBox.Resources>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel
                                                        Grid.Column="0"
                                                        Margin="40,0"
                                                        VerticalAlignment="Center"
                                                        Orientation="Vertical">
                                                        <Button
                                                            Width="80"
                                                            Margin="0,5"
                                                            Click="ViewPlaylistButton_Click"
                                                            Content="مشاهده"
                                                            Style="{StaticResource PrimaryButtonStyle}"
                                                            Tag="{Binding}" />
                                                        <Button
                                                            Width="80"
                                                            Margin="0,5"
                                                            Click="DeletePlaylistButton_Click"
                                                            Content="حذف"
                                                            Style="{StaticResource ModernButtonStyle}"
                                                            Tag="{Binding}" />
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="#ffffff">
                                                            <Run Text="عنوان: " />
                                                            <Run Text="{Binding Name}" />
                                                        </TextBlock>
                                                        <TextBlock
                                                            Margin="0,5,0,0"
                                                            FontSize="11"
                                                            Foreground="#888888">
                                                            <Run Text="{Binding VideoCount, Mode=OneWay}" />
                                                            <Run Text="ویدیو •" />
                                                            <Run Text="{Binding DisplayDateShamsi, Mode=OneWay}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!--  Tab 3: History  -->
                    <TabItem Header="🕐 تاریخچه">
                        <Border
                            Margin="20"
                            Padding="20"
                            Background="#252525"
                            CornerRadius="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  History Header  -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="#ffffff"
                                        Text="تاریخچه پخش" />
                                    <Button
                                        HorizontalAlignment="Left"
                                        Click="ClearHistoryButton_Click"
                                        Content="پاک کردن تاریخچه"
                                        Style="{StaticResource ModernButtonStyle}" />
                                </Grid>

                                <!--  History List  -->
                                <Border
                                    Grid.Row="1"
                                    Background="#3f3f3f"
                                    CornerRadius="10">
                                    <ListBox
                                        x:Name="HistoryListBox"
                                        Background="Transparent"
                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListBox.Resources>
                                            <Style BasedOn="{StaticResource VScrollBarStyle}" TargetType="ScrollBar" />
                                        </ListBox.Resources>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel
                                                        Grid.Column="0"
                                                        Margin="40,0"
                                                        VerticalAlignment="Center"
                                                        Orientation="Vertical">
                                                        <Button
                                                            Width="80"
                                                            Margin="0,5"
                                                            Click="PlayFromHistoryButton_Click"
                                                            Content="پخش"
                                                            Style="{StaticResource PrimaryButtonStyle}"
                                                            Tag="{Binding}" />
                                                        <Button
                                                            Width="80"
                                                            Margin="0,5"
                                                            Click="RemoveFromHistoryButton_Click"
                                                            Content="حذف"
                                                            Style="{StaticResource ModernButtonStyle}"
                                                            Tag="{Binding}" />
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="#ffffff">
                                                            <Run Text="عنوان: " />
                                                            <Run Text="{Binding Title}" />
                                                        </TextBlock>

                                                        <TextBlock
                                                            Margin="0,5,0,5"
                                                            FontSize="11"
                                                            Foreground="#888888"
                                                            TextTrimming="CharacterEllipsis">
                                                            <Run Text="آخرین بازدید: " />
                                                            <Run Text="{Binding DisplayLastPlayedShamsi, Mode=OneWay}" />
                                                        </TextBlock>


                                                        <Button
                                                            Padding="5"
                                                            Background="Transparent"
                                                            FontSize="11"
                                                            Foreground="#888888"
                                                            Tag="{Binding VideoUrl}"
                                                            ToolTip="{Binding VideoUrl}">
                                                            <TextBlock
                                                                Margin="0"
                                                                VerticalAlignment="Center"
                                                                FontSize="11"
                                                                Foreground="#888888"
                                                                Text="برای مشاهده لینک، نگه دار"
                                                                TextTrimming="CharacterEllipsis" />
                                                        </Button>


                                                    </StackPanel>


                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </Grid>
                        </Border>
                    </TabItem>
                </TabControl>

                <!--  Download Panel (Bottom)  -->
                <Border
                    x:Name="DownloadPanel"
                    Grid.Row="2"
                    Padding="20,15"
                    Background="#252525"
                    BorderBrush="#303030"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,10,10"
                    Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#ffffff"
                                    Text="در حال دانلود: " />
                                <TextBlock
                                    x:Name="DownloadFileNameText"
                                    Grid.Column="1"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#cccccc"
                                    Text="video.mp4"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    x:Name="DownloadProgressText"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#ff1313"
                                    Text="0%" />
                            </Grid>

                            <ProgressBar
                                x:Name="DownloadProgressBar"
                                Height="6"
                                Margin="0,8,0,0"
                                Background="#2a2a2a"
                                BorderThickness="0"
                                Foreground="#ff1313"
                                Maximum="100"
                                Value="0" />

                            <Grid Margin="0,5,0,0">
                                <TextBlock
                                    x:Name="DownloadSpeedText"
                                    HorizontalAlignment="Right"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Text="0 KB/s" />
                                <TextBlock
                                    x:Name="DownloadSizeText"
                                    HorizontalAlignment="Left"
                                    FontSize="11"
                                    Foreground="#888888"
                                    Text="0 MB / 0 MB" />
                            </Grid>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Width="100"
                            Margin="20,0,0,0"
                            Click="CancelDownloadButton_Click"
                            Content="لغو"
                            Style="{StaticResource ModernButtonStyle}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </DockPanel>
</Window>
